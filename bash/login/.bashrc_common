echo "bashrc_common is being sourced, probably by mistake"
# command line to use vim instead of emacs
set -o vi
export EDITOR=vim

# alias for ease of use
alias e='exit'

####### Aliases
# aliases for safety
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias mkdir='mkdir -p'

####### Functions
 function cd(){
	 builtin cd "$*" && ls -A
 }

## Mercurial
get(){
  jf get --rebase "$@"
}

up(){
  # no args
  if [ $# -eq 0 ]; then
    hg amend --rebase && jf s -n

  # args
  else
    hg amend --rebase && jf s "$@"
  fi
}
